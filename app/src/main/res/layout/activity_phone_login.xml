<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">

    <EditText
    android:id="@+id/phoneNumberInput"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_marginStart="17dp"
    android:layout_marginEnd="17dp"
    android:layout_marginTop="180dp"
    android:background="@drawable/inputs"
    android:padding="8dp"
    android:hint="Write Your Phone Number"
    android:textAllCaps="false"
    android:textSize="15sp"
    android:textAlignment="center"
    android:drawableStart="@drawable/phone"
    android:textStyle="bold" />

    <EditText
        android:id="@+id/verificationCodeInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/inputs"
        android:padding="8dp"
        android:layout_below="@+id/phoneNumberInput"
        android:hint="Write VerificationCode Here"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textAlignment="center"
        android:drawableStart="@drawable/password"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/sendVerificationCodeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="5dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_below="@+id/verificationCodeInput"
        android:text="Send Verification Code"
        android:textColor="@android:color/background_light"
        />

    <Button
        android:id="@+id/verifyButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="5dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_below="@+id/sendVerificationCodeButton"
        android:text="Verify"
        android:textColor="@android:color/background_light"
        android:visibility="invisible"/>



</RelativeLayout>