<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <include
        android:id="@+id/settingToolbar"
        layout="@layout/app_toolbar_layout">

    </include>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/setProfileImage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/profile_image"
        app:civ_border_width="5dp"
        app:civ_border_color="@color/colorPrimary"/>

    <EditText
        android:id="@+id/setUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setProfileImage"
        android:hint="User Name"
        android:textAlignment="center"
        android:inputType="textMultiLine"
        android:drawableStart="@drawable/edit_profile"
        android:textStyle="bold"
        android:padding="5dp"
        android:background="@drawable/inputs"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        />

    <EditText
        android:id="@+id/setProfileStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setUserName"
        android:hint="Hey, I am Available Now"
        android:textAlignment="center"
        android:inputType="textMultiLine"
        android:drawableStart="@drawable/edit_status"
        android:textStyle="bold"
        android:padding="5dp"
        android:background="@drawable/inputs"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        />

    <Button
        android:id="@+id/updateSettingsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setProfileStatus"
        android:textAlignment="center"
        android:textStyle="bold"
        android:padding="5dp"
        android:text="Update"
        android:background="@drawable/buttons"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:textAllCaps="false"
        android:textSize="20sp"
        />

</RelativeLayout>